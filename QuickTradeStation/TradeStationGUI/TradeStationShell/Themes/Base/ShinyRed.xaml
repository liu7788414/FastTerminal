                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard x:Name="SelectedHoverOff_BeginStoryboard" Storyboard="{StaticResource SelectedHoverOff}" />
